{
    "rules": {
        "terminology": true,
        "apostrophe": true,
        "diacritics": true,
        "common-misspellings": true,
        "stop-words": true,
        "write-good": {
            "adverb": false,
            "passive": false,
            "so": false,
            "thereIs": false,
            "tooWordy": false,
            "weasel": false
        },
        "no-dead-link": {
          "ignoreRedirects": true,
          "ignore": [
            "mailto:*"
          ]
        }
    },
	"filters": {
        "comments": true
    }
}
