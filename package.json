{
  "name": "washingcode",
  "private": true,
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/washingcode",
  "repository": "sapegin/washingcode",
  "license": "CC BY-NC-ND 4.0",
  "engines": {
    "node": ">=8.6"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "lint": "npm run lint:js && npm run lint:text",
    "lint:js": "eslint . --cache --fix",
    "lint:text": "textlint \"manuscript/**/*.md\"",
    "lint:text:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,md}\"",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "posttest": "npm run format"
  },
  "keywords": [],
  "dependencies": {
    "lodash": "^4.17.15",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "eslint": "^6.8.0",
    "eslint-config-tamia": "^7.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "remark": "^11.0.2",
    "textlint": "^11.6.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-apostrophe": "^2.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^1.0.0",
    "textlint-rule-no-dead-link": "^4.6.2",
    "textlint-rule-stop-words": "^2.0.2",
    "textlint-rule-terminology": "^2.1.3",
    "textlint-rule-write-good": "^1.6.2",
    "unist-util-visit": "^2.0.2",
    "vm2": "^3.8.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
